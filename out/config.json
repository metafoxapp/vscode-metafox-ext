{
    "root": "~/Sites/vshare",
    "alias": {
        "artisan": "docker-compose exec app php artisan",
        "composer": "docker-compose exec php ./composer"
    },
    "packages": [
        {
            "name": "voiceshare/user",
            "models": [
                {
                    "name": "activity",
                    "entity": "user_entity",
                    "table": "vs_user_entities",
                    "repository": true
                }
            ]
        },
        {
            "name": "voiceshare/campaign",
            "models": [
                {
                    "name": "campaign",
                    "entity": "campaign",
                    "table": "vs_campaigns",
                    "repository": true
                }
            ]
        },
        {
            "name": "voiceshare/reward",
            "models": [{ "name": "User" }]
        }
    ]
}
