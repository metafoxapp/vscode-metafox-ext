{
  "name": "metafox-ext",
  "displayName": "MetaFox Command Helper",
  "description": "MetaFox extension helper",
  "version": "0.0.18",
  "author": {
    "name": "YouNetSocial",
    "email": "developer@phpfox.com",
    "url": "https://phpfox.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metafoxapp/vscode-metafox-ext.git"
  },
  "engines": {
    "vscode": "^1.99.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "MetaFox Settings",
      "properties": {
        "metafox-ext.projectConfigFile": {
          "type": "string",
          "default": "",
          "description": "Path to the project configuration files"
        }
      }
    },
    "commands": [
      {
        "command": "metafox-ext.backend",
        "title": "metafox backend command"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "rm metafox-ext-*.vsix && npx vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
